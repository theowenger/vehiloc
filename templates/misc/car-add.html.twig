{% extends "base.html.twig" %}
{% block body %}

    <section id="add">
        <a href="index.html">← Retour</a>
        <h1>Ajouter une voiture</h1>
        <form action="{{ path('api_submit_new_car') }}" method="POST">
            <div class="input">
                <label for="name">Nom de la voiture</label>
                <input type="text" id="name" name="name" />
            </div>
            <div class="input">
                <label for="description">Description</label>
                <textarea id="description" name="description"></textarea>
            </div>
            <div class="flex-input">
                <div class="input">
                    <label for="monthly_price">Prix mensuel</label>
                    <input type="number" id="monthly_price" name="monthly_price" />
                </div>
                <div class="input">
                    <label for="daily_price">Prix journalier</label>
                    <input type="number" id="daily_price" name="daily_price" />
                </div>
            </div>
            <div class="flex-input">
                <div class="input">
                    <label for="places">Nombre de places</label>
                    <select id="places" name="places">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                        <option>6</option>
                        <option>7</option>
                        <option>8</option>
                        <option>9</option>
                    </select>
                </div>
                <div class="input">
                    <label for="motor">Boîte de vitesse</label>
                    <select id="motor" name="motor">
                        <option>Manuelle</option>
                        <option>Automatique</option>
                    </select>
                </div>
            </div>

            <button class="btn-add">Ajouter</button>
        </form>
    </section>

{% endblock %}